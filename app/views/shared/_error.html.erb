<turbo-stream action="append" target="flash-messages">
  <template>
    <div class="flash-message error-message alert alert-danger" 
         data-controller="flash" 
         data-flash-target="message"
         data-action="animationend->flash#remove">
      <div class="flex items-center">
        <svg class="h-6 w-6 text-red-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        <span><%= message %></span>
      </div>
      <% if details.present? %>
        <ul class="mt-2 list-disc list-inside text-sm">
          <% details.each do |detail| %>
            <li><%= detail %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </template>
</turbo-stream> 