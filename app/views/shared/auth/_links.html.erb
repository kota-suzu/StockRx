<%# Bootstrap 5 認証リンクコンポーネント - StockRx 管理者認証 %>
<div class="auth-links">
  <%# ログインページへのリンク %>
  <%- if controller_name != 'sessions' %>
    <div class="mb-2">
      <%= link_to new_session_path(resource_name), 
          class: "btn btn-outline-primary btn-sm w-100" do %>
        <i class="bi bi-box-arrow-in-right me-2"></i>ログインページに戻る
      <% end %>
    </div>
  <% end %>

  <%# パスワードリセット %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="mb-2">
      <%= link_to new_password_path(resource_name), 
          class: "text-decoration-none text-muted d-flex align-items-center justify-content-center" do %>
        <i class="bi bi-key me-2"></i>
        <small>パスワードを忘れましたか？</small>
      <% end %>
    </div>
  <% end %>

  <%# アカウント確認 %>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="mb-2">
      <%= link_to new_confirmation_path(resource_name), 
          class: "text-decoration-none text-muted d-flex align-items-center justify-content-center" do %>
        <i class="bi bi-envelope me-2"></i>
        <small>確認メールが届いていませんか？</small>
      <% end %>
    </div>
  <% end %>

  <%# アカウントロック解除 %>
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="mb-2">
      <%= link_to new_unlock_path(resource_name), 
          class: "text-decoration-none text-muted d-flex align-items-center justify-content-center" do %>
        <i class="bi bi-unlock me-2"></i>
        <small>アカウントロック解除</small>
      <% end %>
    </div>
  <% end %>

