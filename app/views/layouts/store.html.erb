    <%# CLAUDE.mdæº–æ‹ : Railsæ¨™æº–åˆæœŸåŒ–ã‚’å„ªå…ˆã€ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯ã¯ç°¡ç´ åŒ– %>
    <script>
      // application.jsåˆæœŸåŒ–çŠ¶æ³ã®ç¢ºèªã¨ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯
      document.addEventListener('DOMContentLoaded', function() {
        console.log('ğŸ”§ Store Layout: Checking Bootstrap initialization...');
        
        // application.jsã®BootstrapåˆæœŸåŒ–ã‚’ãƒã‚§ãƒƒã‚¯
        setTimeout(function() {
          if (typeof bootstrap === 'undefined') {
            console.warn('âš ï¸ Bootstrap not loaded, using fallback');
            setupSimpleFallback();
          } else {
            console.log('âœ… Bootstrap loaded via Importmap');
            
            // ãƒ‰ãƒ­ãƒƒãƒ—ãƒ€ã‚¦ãƒ³ãŒåˆæœŸåŒ–ã•ã‚Œã¦ã„ã‚‹ã‹ãƒã‚§ãƒƒã‚¯
            const userDropdown = document.getElementById('userDropdown');
            if (userDropdown && !bootstrap.Dropdown.getInstance(userDropdown)) {
              console.log('ğŸ”§ Initializing missing user dropdown');
              try {
                new bootstrap.Dropdown(userDropdown);
              } catch (e) {
                console.error('Bootstrap dropdown init failed:', e);
                setupSimpleFallback();
              }
            }
          }
        }, 500);
        
        // ã‚·ãƒ³ãƒ—ãƒ«ãªãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯æ©Ÿèƒ½
        function setupSimpleFallback() {
          const userDropdown = document.getElementById('userDropdown');
          if (userDropdown) {
            userDropdown.addEventListener('click', function(e) {
              e.preventDefault();
              const menu = this.nextElementSibling;
              if (menu && menu.classList.contains('dropdown-menu')) {
                menu.classList.toggle('show');
                menu.style.display = menu.classList.contains('show') ? 'block' : 'none';
              }
            });
          }
        }
      });
      
      // Turboç’°å¢ƒã§ã‚‚å®Ÿè¡Œ
