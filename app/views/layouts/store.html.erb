    <%# Ê®™Â±ïÈñãÁ¢∫Ë™ç: ÂÖ®„Å¶„ÅÆ„É¨„Ç§„Ç¢„Ç¶„Éà„Éï„Ç°„Ç§„É´„Åß‰∏ÄË≤´ÊÄßÁ¢∫‰øùÂÆå‰∫Ü %>
    <%# „Éô„Çπ„Éà„Éó„É©„ÇØ„ÉÜ„Ç£„Çπ: TurboÂØæÂøú„ÅÆBootstrapÂàùÊúüÂåñÂÆüË£Ö %>
    <%# Â∞ÜÊù•Ë®àÁîª: Web ComponentsÁßªË°åÊ§úË®éÔºàBootstrap‰æùÂ≠òÂ∫¶ÂâäÊ∏õÔºâ %>
    
    <%# TODO: üî¥ Phase 1ÔºàÁ∑äÊÄ•Ôºâ- ÂàùÊúüÂåñ„Ç≥„Éº„ÉâÈáçË§áËß£Ê∂àÂÆå‰∫ÜÔºàÊ®™Â±ïÈñãÔºâ %>
    <%# ÂïèÈ°å: „É¨„Ç§„Ç¢„Ç¶„Éà„Éï„Ç°„Ç§„É´„Å®application.js„ÅßBootstrapÂàùÊúüÂåñ„ÅåÈáçË§á %>
    <%# Ëß£Ê±∫: application.js„Å´‰∏ÄÂÖÉÂåñ„ÄÅ„É¨„Ç§„Ç¢„Ç¶„ÉàÂÅ¥„ÅØÂâäÈô§ %>
    <%# ÁêÜÁî±: ÂàùÊúüÂåñ„ÅÆÁ´∂Âêà„Å´„Çà„Çä„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„ÅåÂãï‰Ωú„Åó„Å™„ÅÑ %>
    <%# „É°„ÇøË™çÁü•: ÁÆ°ÁêÜËÄÖÁîªÈù¢„Å®Âêå‰∏ÄÂïèÈ°å„ÅÆ„Åü„ÇÅÂêåÊßò„ÅÆ‰øÆÊ≠£ÈÅ©Áî® %>
    <%# Ê®™Â±ïÈñã: admin.html.erb„Å®Âêå„Åò„Éë„Çø„Éº„É≥„Åß‰øÆÊ≠£ÂÆå‰∫Ü %>

    <%# üö® Á∑äÊÄ•‰øÆÊ≠£ - Â∫óËàóÁîªÈù¢„Åß„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„ÅåÂãï‰Ωú„Åó„Å™„ÅÑÂïèÈ°å %>
    <%# CLAUDE.mdÊ∫ñÊã†: ÁÆ°ÁêÜËÄÖÁîªÈù¢„Å®ÂêåÊßò„ÅÆÊâãÂãïÂÆüË£Ö„Éë„Çø„Éº„É≥ÈÅ©Áî® %>
    <script>
      // Bootstrap CDNË™≠„ÅøËæº„ÅøÂæå„ÅÆÂàùÊúüÂåñÁ¢∫Ë™ç
      window.addEventListener('load', function() {
        console.log('üéØ Window Load - Bootstrap Status:', typeof bootstrap !== 'undefined' ? 'Loaded' : 'Not Loaded');
        
        // BootstrapÊ≠£ÂºèÂàùÊúüÂåñ„ÇíË©¶„Åø„Çã
        if (typeof bootstrap !== 'undefined') {
          console.log('‚úÖ Bootstrap Available - Initializing dropdowns properly');
          
          // „Åô„Åπ„Å¶„ÅÆ„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„ÇíÊ≠£Âºè„Å´ÂàùÊúüÂåñ
          const dropdownElementList = document.querySelectorAll('.dropdown-toggle');
          const dropdownList = [...dropdownElementList].map(dropdownToggleEl => {
            try {
              return new bootstrap.Dropdown(dropdownToggleEl);
            } catch (e) {
              console.error('Dropdown initialization error:', e);
              return null;
            }
          });
          
          console.log(`‚úÖ Initialized ${dropdownList.filter(d => d !== null).length} dropdowns`);
        }
      });
      
      // ÊúÄ„ÇÇÂü∫Êú¨ÁöÑ„ÅßÁ¢∫ÂÆü„Å™ÂÆüË£ÖÔºàÁÆ°ÁêÜËÄÖÁîªÈù¢„Åã„ÇâÁßªÊ§çÔºâ
      document.addEventListener('DOMContentLoaded', function() {
        console.log('üö® EMERGENCY: Store Layout - DOM Content Loaded');
        
        // „Åô„Åπ„Å¶„ÅÆ„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„Å´Âº∑Âà∂ÁöÑ„Å´ÊâãÂãïÊ©üËÉΩ„ÇíËøΩÂä†
        function forceDropdownFunctionality() {
          console.log('üîß Store: Forcing manual dropdown functionality...');
          
          const userDropdown = document.getElementById('userDropdown');
          if (userDropdown) {
            console.log('‚úÖ Store: Found userDropdown element');
            
            // „Åô„Åπ„Å¶„ÅÆ„Ç§„Éô„É≥„Éà„É™„Çπ„Éä„Éº„ÇíÂâäÈô§„Åó„Å¶„ÇØ„É™„Éº„É≥„Ç¢„ÉÉ„Éó
            const newUserDropdown = userDropdown.cloneNode(true);
            userDropdown.parentNode.replaceChild(newUserDropdown, userDropdown);
            
            // Âº∑Âà∂ÁöÑ„Å™ÊâãÂãï„ÇØ„É™„ÉÉ„ÇØ„Éè„É≥„Éâ„É©„Éº
            newUserDropdown.addEventListener('click', function(e) {
              console.log('üö® Store: EMERGENCY CLICK HANDLER TRIGGERED');
              e.preventDefault();
              e.stopPropagation();
              
              // „Çà„ÇäÁ¢∫ÂÆü„Å™„Çª„É¨„ÇØ„Çø„ÉºÔºàË§áÊï∞ÂÄôË£úÔºâ
              let dropdownMenu = document.querySelector('#userDropdown + .dropdown-menu');
              if (!dropdownMenu) {
                dropdownMenu = document.querySelector('.dropdown-menu.dropdown-menu-end');
              }
              if (!dropdownMenu) {
                dropdownMenu = newUserDropdown.parentElement.querySelector('.dropdown-menu');
              }
              if (!dropdownMenu) {
                dropdownMenu = document.querySelector('ul.dropdown-menu');
              }
              if (dropdownMenu) {
                console.log('‚úÖ Store: Found dropdown menu');
                
                // ÁèæÂú®„ÅÆË°®Á§∫Áä∂ÊÖãÁ¢∫Ë™ç
                const isVisible = dropdownMenu.style.display === 'block' || 
                                dropdownMenu.classList.contains('show');
                
                console.log('Store: Current state:', isVisible ? 'visible' : 'hidden');
                
                // ÂÖ®„Å¶„ÅÆ„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„ÇíÈñâ„Åò„Çã
                document.querySelectorAll('.dropdown-menu').forEach(menu => {
                  menu.style.display = 'none';
                  menu.classList.remove('show');
                });
                
                // ÁèæÂú®„ÅÆ„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„Çí„Éà„Ç∞„É´
                if (!isVisible) {
                  dropdownMenu.style.display = 'block';
                  dropdownMenu.classList.add('show');
                  console.log('üéØ Store: Dropdown OPENED');
                } else {
                  console.log('üéØ Store: Dropdown CLOSED');
                }
              } else {
                console.error('‚ùå Store: Dropdown menu not found!');
              }
            }, true); // „Ç≠„É£„Éó„ÉÅ„É£„Éï„Çß„Éº„Ç∫„ÅßÁ¢∫ÂÆü„Å´ÂÆüË°å
            
            console.log('‚úÖ Store: Emergency click handler attached');
          } else {
            console.error('‚ùå Store: userDropdown element not found!');
          }
        }
        
        // Âç≥Â∫ß„Å´ÂÆüË°å
        forceDropdownFunctionality();
        
        // ËøΩÂä†„ÅÆ„Éá„Éê„ÉÉ„Ç∞ÊÉÖÂ†±
        console.log('üîç Store DOM Debug Info:');
        console.log('- Total dropdown-toggle elements:', document.querySelectorAll('.dropdown-toggle').length);
        console.log('- Total dropdown-menu elements:', document.querySelectorAll('.dropdown-menu').length);
        console.log('- UserDropdown exists:', !!document.getElementById('userDropdown'));
        
        // „Åï„Çâ„Å´Á¢∫ÂÆü„Å™‰ª£Êõø„Ç¢„Éó„É≠„Éº„ÉÅ
        document.addEventListener('click', function(e) {
          if (e.target.closest('#userDropdown') || e.target.id === 'userDropdown') {
            console.log('üéØ Store ALTERNATIVE: UserDropdown area clicked');
            e.preventDefault();
            e.stopPropagation();
            
            const userMenu = document.querySelector('#userDropdown + .dropdown-menu, #userDropdown ~ .dropdown-menu, .dropdown-menu.dropdown-menu-end');
            console.log('Store: Found user menu:', !!userMenu);
            
            if (userMenu) {
              const isVisible = userMenu.style.display === 'block' || userMenu.classList.contains('show');
              
              // ÂÖ®„Å¶„ÅÆ„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„ÇíÈñâ„Åò„ÇãÔºà„ÇØ„É™„Éº„É≥„Ç¢„ÉÉ„ÉóÔºâ
              document.querySelectorAll('.dropdown-menu').forEach(menu => {
                menu.style.display = 'none';
                menu.classList.remove('show');
              });
              
              // „É¶„Éº„Ç∂„Éº„É°„Éã„É•„Éº„ÅÆ„Åø„Çí„Éà„Ç∞„É´
              if (!isVisible) {
                userMenu.style.display = 'block';
                userMenu.classList.add('show');
                console.log('üéØ Store: User menu opened');
              } else {
                console.log('üéØ Store: User menu closed');
              }
            } else {
              console.error('‚ùå Store: User dropdown menu not found');
            }
          }
        }, true);
        
        // Â§ñÈÉ®„ÇØ„É™„ÉÉ„ÇØ„ÅßÈñâ„Åò„Çã
        document.addEventListener('click', function(e) {
          if (!e.target.closest('.dropdown')) {
            document.querySelectorAll('.dropdown-menu').forEach(menu => {
              menu.style.display = 'none';
              menu.classList.remove('show');
