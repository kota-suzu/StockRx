    <%# Ê®™Â±ïÈñãÁ¢∫Ë™ç: ÂÖ®„Å¶„ÅÆ„É¨„Ç§„Ç¢„Ç¶„Éà„Éï„Ç°„Ç§„É´„Åß‰∏ÄË≤´ÊÄßÁ¢∫‰øùÂÆå‰∫Ü %>
    <%# „Éô„Çπ„Éà„Éó„É©„ÇØ„ÉÜ„Ç£„Çπ: TurboÂØæÂøú„ÅÆBootstrapÂàùÊúüÂåñÂÆüË£Ö %>
    <%# Â∞ÜÊù•Ë®àÁîª: Web ComponentsÁßªË°åÊ§úË®éÔºàBootstrap‰æùÂ≠òÂ∫¶ÂâäÊ∏õÔºâ %>
    
    <%# TODO: üî¥ Phase 1ÔºàÁ∑äÊÄ•Ôºâ- ÂàùÊúüÂåñ„Ç≥„Éº„ÉâÈáçË§áËß£Ê∂àÂÆå‰∫ÜÔºàÊ®™Â±ïÈñãÔºâ %>
    <%# ÂïèÈ°å: „É¨„Ç§„Ç¢„Ç¶„Éà„Éï„Ç°„Ç§„É´„Å®application.js„ÅßBootstrapÂàùÊúüÂåñ„ÅåÈáçË§á %>
    <%# Ëß£Ê±∫: application.js„Å´‰∏ÄÂÖÉÂåñ„ÄÅ„É¨„Ç§„Ç¢„Ç¶„ÉàÂÅ¥„ÅØÂâäÈô§ %>
    <%# ÁêÜÁî±: ÂàùÊúüÂåñ„ÅÆÁ´∂Âêà„Å´„Çà„Çä„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„ÅåÂãï‰Ωú„Åó„Å™„ÅÑ %>
    <%# „É°„ÇøË™çÁü•: ÁÆ°ÁêÜËÄÖÁîªÈù¢„Å®Âêå‰∏ÄÂïèÈ°å„ÅÆ„Åü„ÇÅÂêåÊßò„ÅÆ‰øÆÊ≠£ÈÅ©Áî® %>
    <%# Ê®™Â±ïÈñã: admin.html.erb„Å®Âêå„Åò„Éë„Çø„Éº„É≥„Åß‰øÆÊ≠£ÂÆå‰∫Ü %>

    <%# üîß Phase 3: ÊúÄÈÅ©ÂåñÊ∏à„ÅøÂàùÊúüÂåñ - application.jsÈÄ£Êê∫Âº∑Âåñ %>
    <%# CLAUDE.mdÊ∫ñÊã†: RailsÊ®ôÊ∫ñÂàùÊúüÂåñ„ÇíÂÑ™ÂÖà„ÄÅ„Éï„Ç©„Éº„É´„Éê„ÉÉ„ÇØ„ÅØÁ∞°Á¥†Âåñ %>
    <script>
      // application.jsÂàùÊúüÂåñÁä∂Ê≥Å„ÅÆÁ¢∫Ë™ç„Å®„Éï„Ç©„Éº„É´„Éê„ÉÉ„ÇØ
      document.addEventListener('DOMContentLoaded', function() {
        console.log('üîß Store Layout: Checking Bootstrap initialization...');
        
        // application.js„ÅÆBootstrapÂàùÊúüÂåñ„Çí„ÉÅ„Çß„ÉÉ„ÇØ
        setTimeout(function() {
          if (typeof bootstrap === 'undefined') {
            console.warn('‚ö†Ô∏è Bootstrap not loaded, using fallback');
            setupSimpleFallback();
          } else {
            console.log('‚úÖ Bootstrap loaded via Importmap');
            
            // „Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„ÅåÂàùÊúüÂåñ„Åï„Çå„Å¶„ÅÑ„Çã„Åã„ÉÅ„Çß„ÉÉ„ÇØ
            const userDropdown = document.getElementById('userDropdown');
            if (userDropdown && !bootstrap.Dropdown.getInstance(userDropdown)) {
              console.log('üîß Initializing missing user dropdown');
              try {
                new bootstrap.Dropdown(userDropdown);
              } catch (e) {
                console.error('Bootstrap dropdown init failed:', e);
                setupSimpleFallback();
              }
            }
          }
        }, 500);
        
        // „Ç∑„É≥„Éó„É´„Å™„Éï„Ç©„Éº„É´„Éê„ÉÉ„ÇØÊ©üËÉΩ
        function setupSimpleFallback() {
          const userDropdown = document.getElementById('userDropdown');
          if (userDropdown) {
            userDropdown.addEventListener('click', function(e) {
              e.preventDefault();
              const menu = this.nextElementSibling;
              if (menu && menu.classList.contains('dropdown-menu')) {
                menu.classList.toggle('show');
                menu.style.display = menu.classList.contains('show') ? 'block' : 'none';
              }
            });
          }
        }
      });
      
      // TurboÁí∞Â¢É„Åß„ÇÇÂÆüË°å
      document.addEventListener('turbo:load', function() {
        console.log('üîß Store: Turbo Load - Re-checking Bootstrap');
        
        // Turbo navigat„Ç∑„Éß„É≥Âæå„ÇÇBootstrapÂàùÊúüÂåñ„Çí„ÉÅ„Çß„ÉÉ„ÇØ
        setTimeout(function() {
          if (typeof bootstrap !== 'undefined') {
            const userDropdown = document.getElementById('userDropdown');
            if (userDropdown && !bootstrap.Dropdown.getInstance(userDropdown)) {
              try {
                new bootstrap.Dropdown(userDropdown);
                console.log('‚úÖ Turbo: User dropdown re-initialized');
              } catch (e) {
                console.error('Turbo Bootstrap init failed:', e);
              }
            }
          }
        }, 100);
      });
    </script>
  </body>
