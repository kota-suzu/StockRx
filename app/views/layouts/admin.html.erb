    <%# ‚úÖ Phase 4ÂÆå‰∫Ü - BootstrapÊúÄÈÅ©Âåñ„Å´„Çà„ÇäÊâãÂãïÂÆüË£ÖÊúÄÂ∞èÂåñ %>
    <%# CLAUDE.mdÊ∫ñÊã†: application.js„ÅÆBootstrapÂàùÊúüÂåñ„ÇíÂÑ™ÂÖà %>
    <%# Ê®™Â±ïÈñã: Â∫óËàóÁîªÈù¢„Å®ÂêåÊßò„ÅÆÊúÄÈÅ©Âåñ„Éë„Çø„Éº„É≥ÈÅ©Áî® %>
    <%# „É°„ÇøË™çÁü•: RailsÊ®ôÊ∫ñ„ÅÆImportmap‰ΩøÁî®„Åß‰øùÂÆàÊÄßÂêë‰∏ä %>
    <script>
      // üîß Phase 4: ÊúÄÈÅ©ÂåñÊ∏à„ÅøÂàùÊúüÂåñ - application.jsÈÄ£Êê∫Âº∑Âåñ
      document.addEventListener('DOMContentLoaded', function() {
        console.log('üîß Admin Layout: Checking Bootstrap initialization...');
        
        // application.js„ÅÆBootstrapÂàùÊúüÂåñ„Çí„ÉÅ„Çß„ÉÉ„ÇØ
        setTimeout(function() {
          if (typeof bootstrap === 'undefined') {
            console.warn('‚ö†Ô∏è Bootstrap not loaded, using fallback');
            setupSimpleFallback();
          } else {
            console.log('‚úÖ Bootstrap loaded via Importmap');
            
            // ÂÖ®„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„ÅåÂàùÊúüÂåñ„Åï„Çå„Å¶„ÅÑ„Çã„Åã„ÉÅ„Çß„ÉÉ„ÇØ
            document.querySelectorAll('.dropdown-toggle').forEach(dropdown => {
              if (!bootstrap.Dropdown.getInstance(dropdown)) {
                console.log('üîß Initializing missing dropdown:', dropdown.id || 'unnamed');
                try {
                  new bootstrap.Dropdown(dropdown);
                } catch (e) {
                  console.error('Bootstrap dropdown init failed:', e);
                  setupSimpleFallback();
                }
              }
            });
          }
        }, 500);
        
        // „Ç∑„É≥„Éó„É´„Å™„Éï„Ç©„Éº„É´„Éê„ÉÉ„ÇØÊ©üËÉΩ
        function setupSimpleFallback() {
          document.querySelectorAll('.dropdown-toggle').forEach(toggle => {
            toggle.addEventListener('click', function(e) {
              e.preventDefault();
              const menu = this.nextElementSibling || 
                          this.closest('.dropdown')?.querySelector('.dropdown-menu');
              if (menu && menu.classList.contains('dropdown-menu')) {
                // ‰ªñ„ÅÆ„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„ÇíÈñâ„Åò„Çã
                document.querySelectorAll('.dropdown-menu').forEach(m => {
                  if (m !== menu) {
                    m.classList.remove('show');
                    m.style.display = 'none';
                  }
                });
                // ÁèæÂú®„ÅÆ„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„Çí„Éà„Ç∞„É´
                menu.classList.toggle('show');
                menu.style.display = menu.classList.contains('show') ? 'block' : 'none';
              }
            });
          });
        }
      });
      
      // TurboÁí∞Â¢É„Åß„ÇÇÂÆüË°å
      document.addEventListener('turbo:load', function() {
        console.log('üîß Admin: Turbo Load - Re-checking Bootstrap');
        
        setTimeout(function() {
          if (typeof bootstrap !== 'undefined') {
            document.querySelectorAll('.dropdown-toggle').forEach(dropdown => {
              if (!bootstrap.Dropdown.getInstance(dropdown)) {
                try {
                  new bootstrap.Dropdown(dropdown);
                  console.log('‚úÖ Turbo: Dropdown re-initialized:', dropdown.id || 'unnamed');
                } catch (e) {
                  console.error('Turbo Bootstrap init failed:', e);
                }
              }
            });
            
            // üîß CLAUDE.mdÊ∫ñÊã†: Bootstrap TooltipÂàùÊúüÂåñ - AdminÁîªÈù¢„Åß„ÅÆUI„Ç¢„ÇØ„Çª„Ç∑„Éì„É™„ÉÜ„Ç£Âêë‰∏ä
            // „É°„ÇøË™çÁü•: ÁÆ°ÁêÜËÄÖ„Ç¢„ÇØ„Ç∑„Éß„É≥„Éú„Çø„É≥„ÅÆ„ÉÑ„Éº„É´„ÉÅ„ÉÉ„Éó„Åß„É¶„Éº„Ç∂„Éì„É™„ÉÜ„Ç£ÊîπÂñÑ
            // Ê®™Â±ïÈñã: Â∫óËàóÁîªÈù¢„Å®ÂêåÊßò„ÅÆ„ÉÑ„Éº„É´„ÉÅ„ÉÉ„Éó‰ΩìÈ®ì„ÇíÁÆ°ÁêÜËÄÖÁîªÈù¢„Åß„ÇÇÊèê‰æõ
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
            if (tooltipTriggerList.length > 0) {
              const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => {
                try {
                  return new bootstrap.Tooltip(tooltipTriggerEl);
                } catch (e) {
                  console.error('Admin Tooltip initialization failed:', e);
                  return null;
                }
              });
              console.log(`‚úÖ Admin: Initialized ${tooltipList.filter(t => t !== null).length} tooltips`);
            }
          }
        }, 100);
      });
    </script>
