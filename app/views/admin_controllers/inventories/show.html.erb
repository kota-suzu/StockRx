<%# 在庫詳細 - 管理画面 %>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div class="flex items-center">
      <%= link_to admin_inventories_path, class: "text-blue-500 hover:text-blue-700 mr-2" do %>
        <i class="fas fa-arrow-left"></i> 一覧に戻る
      <% end %>
      <h1 class="text-2xl font-bold"><%= @inventory.name %></h1>
    </div>
    <div class="flex gap-2">
      <%= link_to "編集", edit_admin_inventory_path(@inventory), class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded" %>
      <%= button_to "削除", admin_inventory_path(@inventory), method: :delete, form: { data: { turbo_confirm: "この在庫を削除してもよろしいですか？" } }, class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <%# 基本情報 %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">基本情報</h2>
      </div>
      <div class="p-6">
        <dl>
          <div class="mb-4">
            <dt class="text-sm font-medium text-gray-500">名称</dt>
            <dd class="mt-1 text-lg text-gray-900"><%= @inventory.name %></dd>
          </div>
          <div class="mb-4">
            <dt class="text-sm font-medium text-gray-500">価格</dt>
            <dd class="mt-1 text-lg text-gray-900"><%= @inventory.formatted_price %></dd>
          </div>
          <div class="mb-4">
            <dt class="text-sm font-medium text-gray-500">在庫数</dt>
            <dd class="mt-1 text-lg text-gray-900 flex items-center">
              <%= @inventory.quantity %> <%= @inventory.alert_badge %>
            </dd>
          </div>
          <div class="mb-4">
            <dt class="text-sm font-medium text-gray-500">ステータス</dt>
            <dd class="mt-1"><%= @inventory.status_badge %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">最終更新日</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= l(@inventory.updated_at, format: :long) if @inventory.updated_at.present? %></dd>
          </div>
        </dl>
      </div>
    </div>

    <%# バッチ情報サマリー %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">バッチ情報</h2>
      </div>
      <div class="p-6">
        <dl>
          <div class="mb-4">
            <dt class="text-sm font-medium text-gray-500">バッチ総数</dt>
            <dd class="mt-1 text-lg text-gray-900"><%= @inventory.batches.count %></dd>
          </div>
          <div class="mb-4">
            <dt class="text-sm font-medium text-gray-500">期限切れバッチ</dt>
            <dd class="mt-1 flex items-center">
              <% expired_count = @inventory.expired_batches.count %>
              <span class="text-lg text-gray-900 mr-2"><%= expired_count %></span>
              <% if expired_count > 0 %>
                <span class="bg-red-200 text-red-700 px-2 py-1 rounded text-xs">要確認</span>
              <% end %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">期限切れ間近バッチ</dt>
            <dd class="mt-1 flex items-center">
              <% expiring_soon_count = @inventory.expiring_soon_batches.count %>
              <span class="text-lg text-gray-900 mr-2"><%= expiring_soon_count %></span>
              <% if expiring_soon_count > 0 %>
                <span class="bg-yellow-200 text-yellow-700 px-2 py-1 rounded text-xs">確認推奨</span>
              <% end %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <%# 操作履歴（将来実装） %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">操作履歴</h2>
      </div>
      <div class="p-6">
        <p class="text-gray-500 text-sm">
          将来的に実装予定の機能です。在庫の操作履歴を表示します。
        </p>
        <%# TODO: 在庫操作履歴の実装 %>
      </div>
    </div>
  </div>

  <%# バッチ一覧 %>
  <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
    <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-lg font-medium text-gray-900">バッチ一覧</h2>
      <% # TODO: バッチ追加機能の実装 %>
      <button class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
        バッチ追加
      </button>
    </div>

    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            ロットコード
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            数量
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            有効期限
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            状態
          </th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            アクション
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @inventory.batches.present? %>
          <% @inventory.batches.each do |batch| %>
            <tr class="<%= batch_row_class(batch) %>">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= batch.lot_code %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= batch.quantity %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= l(batch.expires_on, format: :long) if batch.expires_on.present? %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <% if batch.expired? %>
                  <span class="bg-red-200 text-red-700 px-2 py-1 rounded">期限切れ</span>
                <% elsif batch.expiring_soon? %>
                  <span class="bg-yellow-200 text-yellow-700 px-2 py-1 rounded">期限間近</span>
                <% else %>
                  <span class="bg-green-200 text-green-700 px-2 py-1 rounded">正常</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <% # TODO: バッチの編集・削除機能の実装 %>
                <button class="text-yellow-600 hover:text-yellow-900 mr-2">編集</button>
                <button class="text-red-600 hover:text-red-900">削除</button>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
              バッチデータがありません。「バッチ追加」ボタンからバッチを登録してください。
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%# Helperメソッド - app/helpers/admin/batches_helper.rb に移動するとよい %>
<% 
  def batch_row_class(batch)
    if batch.expired?
      "bg-red-50"
    elsif batch.expiring_soon?
      "bg-yellow-50"
    else
      ""
    end
  end
%> 