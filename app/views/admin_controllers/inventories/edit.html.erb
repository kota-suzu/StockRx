<%# 在庫編集 - Bootstrap 5版 %>
<div class="container-fluid py-4">
  <%# ページヘッダー %>
  <div class="d-flex align-items-center mb-4">
    <%= link_to admin_inventory_path(@inventory), class: "btn btn-outline-secondary me-3" do %>
      <i class="fas fa-arrow-left me-2"></i>詳細に戻る
    <% end %>
    <div>
      <h1 class="h2 mb-1">
        <i class="fas fa-edit me-2 text-warning"></i><%= @inventory.name %> の編集
      </h1>
      <p class="text-muted mb-0">商品情報を更新</p>
    </div>
  </div>

  <%# メインフォームカード %>
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
      <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
          <h2 class="card-title mb-0">
            <i class="fas fa-edit me-2"></i>商品情報編集
          </h2>
        </div>
        <div class="card-body">
          <%= render "form", inventory: @inventory %>
        </div>
      </div>
    </div>
  </div>
</div> 