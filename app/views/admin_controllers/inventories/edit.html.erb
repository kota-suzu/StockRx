<%# 在庫編集 - 管理画面 %>
<div class="container mx-auto px-4 py-8">
  <div class="flex items-center mb-6">
    <%= link_to admin_inventory_path(@inventory), class: "text-blue-500 hover:text-blue-700 mr-2" do %>
      <i class="fas fa-arrow-left"></i> 詳細に戻る
    <% end %>
    <h1 class="text-2xl font-bold"><%= @inventory.name %> の編集</h1>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden p-6">
    <%= render "form", inventory: @inventory %>
  </div>
</div> 