<%# 在庫一覧 - 管理画面 %>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">在庫一覧</h1>
    <div class="flex gap-2">
      <%= link_to "新規登録", new_admin_inventory_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" %>
      <%= link_to "CSVインポート", import_form_admin_inventories_path, class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded" %>
    </div>
  </div>

  <%# 検索フォーム %>
  <div class="bg-white rounded-lg shadow p-4 mb-6">
    <%= form_with url: admin_inventories_path, method: :get, class: "flex flex-wrap items-center gap-4", data: { turbo_frame: "inventory_list" } do |f| %>
      <div class="flex-1">
        <%= f.label :q, "キーワード検索", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :q, value: params[:q], placeholder: "商品名で検索", class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
      </div>

      <div class="w-40">
        <%= f.label :status, "ステータス", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :status, Inventory::STATUSES.map { |k, _| [t("inventories.status.#{k}"), k] }, { include_blank: "すべて" }, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
      </div>

      <div class="w-40">
        <%= f.label :sort, "並び替え", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :sort, [["名前", "name"], ["価格", "price"], ["数量", "quantity"], ["更新日", "updated_at"]], { selected: params[:sort] || "updated_at" }, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
      </div>

      <div class="w-40">
        <%= f.label :direction, "順序", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :direction, [["昇順", "asc"], ["降順", "desc"]], { selected: params[:direction] || "desc" }, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
      </div>

      <div class="flex items-end">
        <%= f.check_box :low_stock, { checked: params[:low_stock] == "true", class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" } %>
        <%= f.label :low_stock, "在庫切れのみ", class: "ml-2 text-sm font-medium text-gray-700" %>
      </div>

      <div class="flex items-end">
        <%= f.submit "検索", class: "bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>

  <%# 在庫一覧テーブル %>
  <%= turbo_frame_tag "inventory_list" do %>
    <div class="bg-white rounded-lg shadow overflow-hidden mb-6">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= link_to "名称", admin_inventories_path(sort: "name", direction: sort_direction_for("name"), q: params[:q], status: params[:status]), data: { turbo_frame: "inventory_list" } %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= link_to "価格", admin_inventories_path(sort: "price", direction: sort_direction_for("price"), q: params[:q], status: params[:status]), data: { turbo_frame: "inventory_list" } %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= link_to "数量", admin_inventories_path(sort: "quantity", direction: sort_direction_for("quantity"), q: params[:q], status: params[:status]), data: { turbo_frame: "inventory_list" } %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              ステータス
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              バッチ数
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              更新日
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              アクション
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @inventories.each do |inventory| %>
            <tr class="<%= inventory_row_class(inventory) %>">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= link_to inventory.name, admin_inventory_path(inventory), class: "hover:text-blue-600" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= inventory.formatted_price %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= inventory.quantity %> <%= inventory.alert_badge %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= inventory.status_badge %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= inventory.batches.count %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= inventory.updated_at_formatted %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "詳細", admin_inventory_path(inventory), class: "text-blue-600 hover:text-blue-900 mr-2" %>
                <%= link_to "編集", edit_admin_inventory_path(inventory), class: "text-yellow-600 hover:text-yellow-900 mr-2" %>
                <%= button_to "削除", admin_inventory_path(inventory), method: :delete, form: { data: { turbo_confirm: "この在庫を削除してもよろしいですか？" } }, class: "text-red-600 hover:text-red-900 inline-block" %>
              </td>
            </tr>
          <% end %>

          <% if @inventories.empty? %>
            <tr>
              <td colspan="7" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">
                在庫データがありません。新しい在庫を登録するか、CSVでインポートしてください。
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%# ページネーション（必要に応じて） %>
    <% if @inventories.respond_to?(:total_pages) %>
      <div class="flex justify-center">
        <%= paginate @inventories, theme: 'tailwind' %>
      </div>
    <% end %>
  <% end %>

  <%# インポート進捗表示 - Stimulusコントローラー用DOM %>
  <div id="csv-import-progress" class="hidden rounded-lg bg-blue-50 p-4 border border-blue-200 mb-6" 
       data-controller="import-progress"
       data-import-progress-job-id-value="<%= params[:job_id] %>">
    <h3 class="text-lg font-medium text-blue-900 mb-2">CSVインポート進行中...</h3>
    <div class="w-full bg-gray-200 rounded-full h-2.5">
      <div class="bg-blue-600 h-2.5 rounded-full" style="width: 0%" data-import-progress-target="bar"></div>
    </div>
    <p class="mt-2 text-sm text-blue-700" data-import-progress-target="status">準備中...</p>
  </div>
</div>

<%# Helperメソッド - app/helpers/admin/inventories_helper.rb に移動するとよい %>
<% 
  def inventory_row_class(inventory)
    if inventory.quantity <= 0
      "bg-red-50"
    elsif inventory.low_stock?
      "bg-yellow-50"
    else
      ""
    end
  end

  def sort_direction_for(column)
    if params[:sort] == column && params[:direction] == "asc"
      "desc"
    else
      "asc"
    end
  end
%> 