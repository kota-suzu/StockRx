<%# 在庫新規登録 - Bootstrap 5版 %>
<div class="container-fluid py-4">
  <%# ページヘッダー %>
  <div class="d-flex align-items-center mb-4">
    <%= link_to admin_inventories_path, class: "btn btn-outline-secondary me-3" do %>
      <i class="fas fa-arrow-left me-2"></i>一覧に戻る
    <% end %>
    <div>
      <h1 class="h2 mb-1">
        <i class="fas fa-plus-circle me-2 text-success"></i>新規在庫登録
      </h1>
      <p class="text-muted mb-0">新しい商品を在庫システムに追加</p>
    </div>
  </div>

  <%# メインフォームカード %>
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
      <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
          <h2 class="card-title mb-0">
            <i class="fas fa-edit me-2"></i>商品情報入力
          </h2>
        </div>
        <div class="card-body">
          <%= render "form", inventory: @inventory %>
        </div>
      </div>
    </div>
  </div>
</div> 