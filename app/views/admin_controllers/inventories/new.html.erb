<%# 在庫新規登録 - 統一UI版 %>
<div class="container-fluid py-4">
  <%# 統一ページヘッダー %>
  <%= render 'admin_controllers/shared/page_header',
             title: '新規在庫登録',
             subtitle: '新しい商品を在庫システムに追加',
             icon: 'bi-plus-circle',
             icon_color: 'success',
             back_path: admin_inventories_path,
             back_text: '一覧に戻る',
             breadcrumbs: [
               { text: 'ダッシュボード', path: admin_root_path, icon: 'bi-house' },
               { text: '在庫管理', path: admin_inventories_path, icon: 'bi-box' },
               { text: '新規登録', active: true }
             ] %>

  <%# メインフォームカード %>
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-6">
      <div class="card admin-card">
        <div class="card-header bg-success text-white">
          <h2 class="card-title mb-0">
            <i class="bi bi-pencil-square me-2"></i>商品情報入力
          </h2>
        </div>
        <div class="card-body admin-form">
          <%= render "form", inventory: @inventory %>
        </div>
      </div>
    </div>
  </div>
</div> 