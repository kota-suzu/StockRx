<div class="admin-password-reset-container">
  <h2>パスワードをお忘れですか？</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
    <%= render "admin_controllers/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワードリセット手順を送信する" %>
    </div>
  <% end %>

  <%= render "admin_controllers/shared/links" %>
</div> 