<%= form_with(model: inventory, class: "space-y-4") do |form| %>
  <% if inventory.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded mb-4">
      <div class="font-bold mb-2">
        <%= pluralize(inventory.errors.count, "つのエラー") %> が発生しました:
      </div>
      <ul class="list-disc ml-5">
        <% inventory.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "商品名", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :quantity, "在庫数", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :quantity, min: 0, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.label :price, "単価", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <span class="text-gray-500">¥</span>
      </div>
      <%= form.number_field :price, min: 0, step: 0.01, class: "w-full pl-8 pr-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  </div>

  <div>
    <%= form.label :status, "ステータス", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.select :status, options_for_select(Inventory::STATUSES.map { |k, _| [k.humanize, k] }, inventory.status), {}, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex justify-end gap-4 pt-4">
    <% if inventory.persisted? %>
      <%= link_to "キャンセル", inventory_path(inventory), class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
    <% else %>
      <%= link_to "キャンセル", inventories_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
    <% end %>
    <%= form.submit inventory.persisted? ? "更新する" : "登録する", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
  </div>
<% end %> 