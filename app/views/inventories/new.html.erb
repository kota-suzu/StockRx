<%# Bootstrap 5 モダル新規在庫登録 - StockRx 公開インターフェース %>
<% content_for :title, "新規在庫登録 | StockRx" %>

<%= turbo_frame_tag "modal" do %>
  <%# Bootstrap 5 Modal %>
  <div class="modal fade show" tabindex="-1" aria-labelledby="newInventoryModalLabel" aria-modal="true" 
       style="display: block; background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content shadow-lg border-0">
        
        <%# Modal Header %>
        <div class="modal-header bg-primary text-white">
          <h1 class="modal-title h4 mb-0" id="newInventoryModalLabel">
            <i class="fas fa-plus-circle me-2"></i>新規在庫登録
          </h1>
          <%= link_to inventories_path, 
              class: "btn-close btn-close-white", 
              "aria-label": "Close",
              data: { turbo_frame: "_top" } %>
        </div>
        
        <%# Modal Body %>
        <div class="modal-body p-4">
          <div class="mb-3">
            <div class="alert alert-info border-0" role="alert">
              <div class="d-flex align-items-center">
                <i class="fas fa-info-circle me-2"></i>
                <div>
                  <strong>新規商品を登録します</strong><br>
                  <small class="text-muted">必要な情報を入力して登録ボタンを押してください。</small>
                </div>
              </div>
            </div>
          </div>
          <%= render "form", inventory: @inventory %>
        </div>
        
        <%# Modal Footer %>
        <div class="modal-footer bg-light">
          <small class="text-muted me-auto">
            <i class="fas fa-shield-alt me-1"></i>
            入力されたデータは安全に保存されます
          </small>
        </div>
      </div>
    </div>
  </div>
<% end %>

