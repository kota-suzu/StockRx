<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg w-full max-w-xl mx-4 md:mx-auto overflow-hidden">
      <div class="px-6 py-4 border-b flex items-center justify-between">
        <h2 class="text-xl font-semibold">在庫を編集：<%= @inventory.name %></h2>
        <%= link_to inventories_path, class: "text-gray-500 hover:text-gray-700" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        <% end %>
      </div>
      
      <div class="p-6">
        <%= render "form", inventory: @inventory %>
      </div>
    </div>
  </div>
<% end %> 