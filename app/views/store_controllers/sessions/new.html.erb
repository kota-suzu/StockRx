function setupManualTab(tabElement) {
  console.log('ğŸ”§ Setting up manual tab for:', tabElement.id || 'unnamed');
  
  tabElement.addEventListener('click', function(e) {
    e.preventDefault();
    handleManualTabToggle(this);
