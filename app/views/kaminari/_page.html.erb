<% if page.current? %>
  <li class="page-item active" aria-current="page">
    <span class="page-link">
      <%= page %>
      <span class="visually-hidden">(現在のページ)</span>
    </span>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link', 'aria-label': "ページ #{page} に移動" %>
  </li>
<% end %>
