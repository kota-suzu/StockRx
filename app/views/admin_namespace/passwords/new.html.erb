<div class="admin-login-container">
  <h2>パスワードリセット</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
    <%= render "admin_namespace/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワードリセット手順を送信" %>
    </div>
  <% end %>

  <%= render "admin_namespace/shared/links" %>
</div> 